<application>
  <component name="CodeInsightSettings">
    <option name="SHOW_FULL_SIGNATURES_IN_PARAMETER_INFO" value="true" />
  </component>
  <component name="DefaultFont">
    <option name="FONT_SIZE" value="17" />
    <option name="FONT_FAMILY" value="JetBrains Mono" />
    <option name="LINE_SPACING" value="1.6" />
    <option name="USE_LIGATURES" value="true" />
    <option name="SECONDARY_FONT_FAMILY" value="Fira Code" />
  </component>
  <component name="TodoConfiguration">
    <pattern pattern="\b(todo|fixme)\b.*" />
    <pattern icon="question" useCustomColors="true" pattern="\b(refactor)\b.*">
      <option name="FOREGROUND" value="6ff8f" />
      <option name="FONT_TYPE" value="2" />
    </pattern>
    <pattern icon="question" useCustomColors="true" pattern="\b(docu)\b.*">
      <option name="FOREGROUND" value="93ff" />
      <option name="FONT_TYPE" value="2" />
    </pattern>
    <pattern icon="important" useCustomColors="true" pattern="\b(package)\b:.*">
      <option name="FOREGROUND" value="ff4d46" />
      <option name="FONT_TYPE" value="2" />
    </pattern>
    <filter name="refactor">
      <pattern index="1" />
    </filter>
    <filter name="todo|fixme">
      <pattern index="0" />
    </filter>
    <filter name="docu">
      <pattern index="2" />
    </filter>
    <filter name="package">
      <pattern index="3" />
    </filter>
    <filter name="refactor|package">
      <pattern index="1" />
      <pattern index="3" />
    </filter>
  </component>
</application>